client
remote <%= @vpn_server %> 443
proto tcp
dev tun

# TODO: Abstract the keynames to hostnames
ca /etc/openvpn/certs/ca.crt
cert /etc/openvpn/certs/sirius.crt
key /etc/openvpn/certs/sirius.key
tls-auth /etc/openvpn/certs/ta.key 1

resolv-retry infinite
nobind

comp-lzo yes

auth-nocache
script-security 2
persist-key
persist-tun

user openvpn
group openvpn

