acl "can_xfer" {
<% if @dns_type == "master" -%>
10.66.77.102;
<% elsif @dns_type == "slave" -%>
10.66.77.101;
<% end -%>
};

acl "trusted_servers" {
  127.0.0.0/8;
  ::1/128;
  10.66.77.0/24;
};

options {
  directory "/var/bind";
  pid-file "/var/run/named/named.pid";

  listen-on-v6 {
    none;
  };
  listen-on {
    127.0.0.1;
    <% if @dns_type == "master" -%>
    10.66.77.101;
    <% elsif @dns_type == "slave" -%>
    10.66.77.102;
    <% end -%>
  };

  allow-query {
    trusted_servers;
  };

  allow-query-cache {
    trusted_servers;
  };

  allow-recursion {
    trusted_servers;
  };

  allow-transfer {
    can_xfer;
  };

  allow-update {
    none;
  };

  forward first;
  forwarders {
    10.66.77.1;
    208.67.222.222;
    208.67.220.220;
  };
};

include "/etc/bind/rndc.key";
controls {
  inet 127.0.0.1 port 953 allow { 127.0.0.1/32; ::1/128; } keys { "rndc-key"; };
};

logging {
  channel default_syslog {
    file "/var/log/named/named.log" versions 5 size 50M;
    severity debug;
    print-time yes;
    print-severity yes;
    print-category yes;
  };

  category default { default_syslog; };
  category general { default_syslog; };
};

<% if @dns_type == "master" -%>

view "internal" {
  match-clients { 10.66.77.0/24; localhost; };
  recursion yes;

  zone "nitelite.io" {
    type master;
    file "pri/nitelite.io.internal";
    allow-transfer { can_xfer; };
  };

  zone "hackbytes.com" {
    type master;
    file "pri/hackbytes.com.internal";
    allow-transfer { can_xfer; };
  };

  zone "chompix.com" {
    type master;
    file "pri/chompix.com.internal";
    allow-transfer { can_xfer; };
  };

  zone "tehpotatoking.com" {
    type master;
    file "pri/tehpotatoking.com.internal";
    allow-transfer { can_xfer; };
  };

  zone "byronsanchez.net" {
    type master;
    file "pri/byronsanchez.net.internal";
    allow-transfer { can_xfer; };
  };

  zone "77.66.10.in-addr.arpa" {
    type master;
    file "pri/10.66.77.internal";
    allow-transfer { can_xfer; };
  };
};

<% elsif @dns_type == "slave" -%>

view "internal" {
  match-clients { 10.66.77.0/24; localhost; };
  recursion yes;

  zone "internal.nitelite.io" {
    type slave;
    file "pri/internal.nitelite.io.internal";
    masters { 10.66.77.101; };
  };

  zone "77.66.10.in-addr.arpa" {
    type slave;
    file "pri/10.66.77.internal";
    masters { 10.66.77.101; };
  };
};

<% end -%>
