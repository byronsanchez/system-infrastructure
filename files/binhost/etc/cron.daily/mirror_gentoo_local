#!/bin/sh

###########################################
#                                         #
# MANAGED BY PUPPET                       #
#                                         #
# Manual changes WILL be overwritten      #
#                                         #
###########################################

if [ ! -f /tmp/mirror_gentoo_local ];
then
  touch /tmp/mirror_gentoo_local;

  # sync local distfiles
  rsync -aqvz --delete --delete-after /usr/portage/distfiles/ \
  /srv/nfs/io/gentoo-local-distfiles;

  # sync local packages
  rsync -aqvz --delete --delete-after /usr/portage/packages/ \
  /srv/nfs/io/gentoo-local-packages;

  rm /tmp/mirror_gentoo_local;
fi

